<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/Rahman"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/numbers"
        android:padding="@dimen/margin4"
        android:text="@string/name"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size1" />
    <TextView
        android:id="@+id/Arijit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colors"
        android:padding="@dimen/margin4"
        android:text="@string/name1"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size1" />
    <TextView
        android:id="@+id/Shreya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/phrases"
        android:padding="@dimen/margin4"
        android:text="@string/name2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size1" />
    <TextView
        android:id="@+id/Neha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/family"
        android:padding="@dimen/margin4"
        android:text="@string/name3"
        android:textColor="@android:color/black"
        android:textSize="@dimen/size1" />
</LinearLayout>